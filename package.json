{
  "name": "sample-bot",
  "version": "1.0.0",
  "description": "Basic Discord bot using discord.js with TypeScript",
  "license": "GNU GENERAL PUBLIC LICENSE V3",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "deploy": "npm run build && node --env-file=.env dist/deploy-commands.js",
    "remove": "npm run build && node --env-file=.env dist/remove-commands.js",
    "prereq": "npm run build && node --env-file=.env dist/misc/prerequisitesCheck.js",
    "dev": "npm run build && npm start",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "prebuild": "npm run clean",
    "start": "npm run prereq && node --env-file=.env dist/index.js",
    "watch": "tsc -w"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "discord.js": "^14.21.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.13",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": "9.12.2"
  },
  "packageManager": "pnpm@9.12.2",
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.2"
  }
}
